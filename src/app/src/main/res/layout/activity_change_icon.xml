<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp">

    <!-- Nút Back -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back"
        android:tint="@color/white"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/title_change_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biểu tượng ứng dụng"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Mô tả -->
    <TextView
        android:id="@+id/subtitle_change_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn một biểu tượng ứng dụng tùy chỉnh cho Màn hình chính của bạn"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:layout_below="@id/title_change_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <!-- GridView để hiển thị danh sách icon -->
    <GridView
        android:id="@+id/icon_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle_change_icon"
        android:layout_marginTop="16dp"
        android:numColumns="4"
        android:horizontalSpacing="4dp"
        android:verticalSpacing="4dp"
        android:stretchMode="columnWidth"
        android:gravity="center"/>
</RelativeLayout>